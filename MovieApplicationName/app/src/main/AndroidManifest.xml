        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name="com.companyname.moviecat.MainActivity" />
        <activity android:name="com.companyname.moviecat.activities.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.companyname.moviecat.activities.BaseActivity" />
        <activity android:name="com.companyname.moviecat.activities.RegisterActivity" />
        <activity android:name="com.companyname.moviecat.activities.ForgotPasswordActivity" />
        <activity android:name="com.companyname.moviecat.activities.KotlinActivity" />
        <activity android:name="com.companyname.moviecat.activities.DetailActivity" />
        <activity android:name="com.companyname.moviecat.activities.DetailImageViewActivity" />
