<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_below="@+id/favoritesToolbar"
    android:id="@+id/listNoMoviesContainer"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_width="128dp"
        android:id="@+id/imageIcon"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:layout_height="128dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageIcon"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="You don't seem to have any movies in this list. Try adding some!"
        android:textAlignment="center"
        android:textColor="@color/onboardingBackground" />

</RelativeLayout>